<div
  id="goodbye"
  class="flex justify-center items-center z-50 fixed top-0 left-0 w-screen h-screen bg-neutral-50 text-neutral-800 hidden transition-all font-heading font-black text-7xl"
>
  Goodbye
</div>

<script>
  const isDevelopMode = import.meta.env.DEV;
  let goodbyeInterval = null;
  const goodbyeList = [
    "Goodbye",
    "Hej då",
    "Farvel",
    "Näkemiin",
    "Au revoir",
    "Tschüss",
    "Aloha",
    "Ciao",
    "Adiós",
    "وداعا",
    "さようなら",
    "再见",
    "Kwaheri",
    "ביי",
    "अलविदा",
    "잘 가",
    "Αντίο",
    "Adéu",
  ];

  const addGoodbyeElement = () => {
    document.getElementById("goodbye").classList.remove("hidden");
    goodbyeInterval = setInterval(() => {
      document.getElementById("goodbye").innerHTML =
        goodbyeList[Math.floor(Math.random() * goodbyeList.length)];
    }, 500);
  };

  const removeGoodbyeElement = () => {
    document.getElementById("goodbye").classList.add("hidden");
    document.getElementById("goodbye").innerHTML = "Goodbye";
    clearInterval(goodbyeInterval);
  };

  if (!isDevelopMode) {
    document.addEventListener("mouseleave", addGoodbyeElement);
    document
      .getElementById("goodbye")
      .addEventListener("mouseover", removeGoodbyeElement);
  }
</script>
